menu "Target option"
    config TARGET_BOARD
        string
        default "pico"
        prompt "Target board name"

    config TARGET_ARCH
        string
        default "m0plus"
        prompt "Target architecture name"

endmenu

menu "IPC option"
    config IPC_CHANNEL_COUNT
        int
        default 16
        prompt "IPC channel count"

    config IPC_CHANNEL_LENGTH
        int
        default 16
        prompt "IPC channel length"

    config IPC_MESSAGE_SIZE
        int
        default 32
        prompt "IPC message size"
endmenu

menu "Task option"
    config TASK_NAME_SIZE
        int
        default 16
        prompt "Task name size"
endmenu
